@model AppFluxoDeCaixa.Models.Fornecedor

@{
    ViewData["Title"] = "Editar Fornecedores";
}

<h1 class="display-5 text-light text-center">Editar cadastro de Fornecedores</h1>

<hr />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-12 col-md-8 mt-3">
            <input type="hidden" asp-for="FornecedorId" />
            <div class="form-group">

                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>

            </div>
        </div>

        <div class="col-12 col-md mt-3">
            <div class="form-group">
                <label asp-for="CNPJ" class="control-label"></label>
                <input asp-for="CNPJ" class="form-control" />
                <span asp-validation-for="CNPJ" class="text-danger"></span>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-12 col-md-4 mt-3">
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="col-12 col-md mt-3">
            <div class="form-group">
                <label asp-for="DataCadastro" class="control-label"></label>
                <input readonly="readonly" asp-for="DataCadastro" class="form-control" />
                <span asp-validation-for="DataCadastro" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12 col-md-4 mt-3">
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
        </div>

    </div>

    <div class="row">


        <div class="col-12 col-md mt-3"> </div>

        <div class="col-12 col-md-7 mt-3">
            <label> Ativo? </label>
            <div class="form-check form-switch form-control-lg">
                <input class="form-check-input" type="checkbox" role="switch" asp-for="Ativo" /> SIM
            </div>
        </div>


    </div>
    </div>

    <div class="row">
        <div class="col col-md-4 mt-5">
            <a class="btn btn-outline-secondary w-100" asp-action="Index">Cancelar</a>
        </div>

        <div class="col-2 col-md mt-5">
        </div>
        <div class="col col-md-4 mt-5">
            <input type="submit" value="Salvar" class="btn btn-success w-100" />
        </div>



    </div>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
