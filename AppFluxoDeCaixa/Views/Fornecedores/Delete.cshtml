@model AppFluxoDeCaixa.Models.Fornecedor

@{
    ViewData["Title"] = "Apagar";
}

<h1 class="display-5 text-light text-center">Deletar cadastro de Fornecedor</h1>

<h3 class="mt-3 mb-3">Deseja excluir esse cadastro?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-3">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-9">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-3">
            @Html.DisplayNameFor(model => model.CNPJ)
        </dt>
        <dd class="col-9">
            @Html.DisplayFor(model => model.CNPJ)
        </dd>
        <dt class="col-3">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-9">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-3">
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>
        <dd class="col-9">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
        <dt class="col-3">
            @Html.DisplayNameFor(model => model.DataCadastro)
        </dt>
        <dd class="col-9">
            @Html.DisplayFor(model => model.DataCadastro)
        </dd>
    </dl>

    <div class="row">

        <div class="col col-md-4 mt-4">
            <a class="btn btn-outline-secondary w-100" asp-action="Index">Cancelar</a>

        </div>

        <div class="col-2 col-md mt-4">
        </div>

        <div class="col col-md-4 mt-4">
            <input type="submit" value="Excluir" class="btn btn-danger w-100" />

        </div>
    </div>
</div>
